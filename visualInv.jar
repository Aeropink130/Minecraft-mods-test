package inventory;

import net.minecraft.client.gui.screen.ingame.HandledScreen;
import net.minecraft.entity.player.PlayerEntity;
import net.minecraft.entity.player.PlayerInventory;
import net.minecraft.text.Text;
import net.minecraft.util.Identifier;

public class OrdenarItemsScreen extends HandledScreen<OrdenarItemsContainer> {

    private static final Identifier BACKGROUND_TEXTURE = new Identifier("textures/gui/container/generic_54.png");

    public OrdenarItemsScreen(OrdenarItemsContainer container, PlayerInventory playerInventory, Text title) {
        super(container, playerInventory, title);
    }

    @Override
    protected void init() {
        super.init();

        // Configura la posición y el tamaño del botón
    }

    @Override
    public void render(int mouseX, int mouseY, float delta) {
        // Renderiza el fondo de la pantalla del inventario
        this.renderBackground();

        // Dibuja el fondo del contenedor (predeterminado)
        this.drawBackground(delta, mouseX, mouseY);

        // Dibuja los elementos del contenedor
        super.render(mouseX, mouseY, delta);

        // Renderiza el texto y los elementos adicionales (predeterminados)
        this.drawMouseoverTooltip(mouseX, mouseY);
    }

    @Override
    protected void drawBackground(float delta, int mouseX, int mouseY) {
        // Dibuja el fondo del contenedor
        this.client.getTextureManager().bindTexture(BACKGROUND_TEXTURE);
        int i = (this.width - this.containerWidth) / 2;
        int j = (this.height - this.containerHeight) / 2;
        this.drawTexture(i, j, 0, 0, this.containerWidth, 3 * 18 + 17);
        this.drawTexture(i, j + 3 * 18 + 17, 0, 126, this.containerWidth, 96);
    }
}
